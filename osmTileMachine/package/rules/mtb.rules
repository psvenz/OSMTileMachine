// Example of Maperitive rendering rules for OSMTileMachine

features
	points
		place : place
		named_points : shop or restaurant or pub or natural=peak
	lines
		road : highway
		railway : railway=rail 
		bridge : bridge=yes or bridge=viaduct
		waterway : waterway
		cliff : natural=cliff
	areas
		landuse : landuse
		building : building
		
		barrier : barrier
		parking : amenity=parking
		recreation : leisure=stadium or leisure=park or leisure=playground or leisure=garden or leisure=common
		pitch : leisure=pitch
		protected : leisure=nature_reserve or boundary=protected_area or boundary=national_park
		waterarea : natural=water OR waterway

properties
	map-background-color : #2cfaeb
	map-sea-color : #65a4d0 
	text-color : #eeeeee
	text-halo-color : #ffffff
	text-halo-width : 40%
	font-size : 14
	font-family : Clear Sans
	font-weight : bold
	topmost-layer : true 

rules
	target : place
		for : place=city
			define
				min-zoom : 7
				max-zoom : 14
				font-size : 10:18;13:14

		elsefor : place=suburb
			define
				min-zoom : 13
				max-zoom : 16
		elsefor : place=town
			define
				min-zoom : 11
				max-zoom : 15
				font-size : 10:18;13:14
		elsefor : place=village
			define
				min-zoom : 14
				max-zoom : 16

		elsefor : place=neighbourhood
			define
				min-zoom : 14
				max-zoom : 16
		elsefor : place=locality
			define
				min-zoom : 15
				max-zoom : 17
		elsefor : place=hamlet
			define
				min-zoom : 14
				max-zoom : 17

		elsefor : place=isolated_dwelling
			define
				min-zoom : 15
				max-zoom : 17

		else
			stop
		define
			text-color : #000000
		draw : text
	

	target : protected			
		define
				
			min-zoom : 13
			line-style : solid
			line-color : #449944
			line-width : 1
			line-opacity : 0.4
			fill-color : #009900
			fill-hatch : nwse
			fill-opacity : 0.1
			fill-hatch-color : #aaffaa
			fill-hatch-opacity : 0.07

		draw : fill

	target : pitch			
		define
				
			min-zoom : 14
			line-style : solid
			line-color : #aadf79
			line-width : 1
			line-opacity : 0.8
			fill-color : #aadf79
			fill-opacity : 0.3

		draw : fill


	target : building
		define
			line-style : none
			min-zoom : 12
			fill-color : #8c7a6f
		draw : fill

	target : $featuretype(area) 


		for  : landuse
			define
				min-zoom : 16
				font-size : 13
			draw : text
		elsefor : leisure=stadium or leisure=park or leisure=playground or leisure=garden or leisure=common
			define
				min-zoom : 17
				font-size : 12

			draw : text
		elsefor : building=yes
			define
				min-zoom : 17
				text-halo-width : 22%
				font-family : arial
				font-size : 12
			draw : text
		
		else
			define
				min-zoom : 18
				text-halo-width : 22%
				font-family : arial
				font-size : 11
			draw : text

	target : $featuretype(point)
		define
			min-zoom : 18
			text-halo-width : 22%
			font-family : arial
			font-size : 11
		draw : text

		
	target : road




		for : highway=footway or footway=designated
			define
				min-zoom : 16
				line-color : #ee3333
				line-width : 16:1;17:2
				line-opacity : 1
				line-style : dash
		elsefor : highway=cycleway or cycleway=designated
			define
				min-zoom : 15
				line-color : #3333dd
				line-width : 13:1;16:2
				line-opacity : 1
				line-style : dash
		elsefor : highway=path
			define
				min-zoom : 13
				line-color : #000000
				line-width : 1
				line-opacity : 0.5
				line-style : dash
		elsefor : highway=track
			define
				min-zoom : 13
				line-color : #774422
				line-width : 13:1;16:2
				line-opacity : 1
				line-style : dash

		elsefor : highway=residential or (highway=service AND (NOT service=parking_aisle)) or highway=living_street or highway=road or highway=services or highway=turning_loop or highway=raceway
			define
				min-zoom : 13
				line-color : #ffffff
				line-width : 13:1;15:3;19:5
				border-style : solid
				border-color : #000000
				border-width : 20%

		elsefor : (highway=service AND service=parking_aisle)
			define
				min-zoom : 15
				line-color : #ffffff
				line-width : 15:2;19:4
				border-style : solid
				border-color : #000000
				border-width : 20%

		elsefor : highway=unclassified
			define
				min-zoom : 12
				line-color : #ffffff
				line-width : 9:1;15:3;19:10
				border-style : solid
				border-color : #000000
				border-width : 20%

		elsefor : highway=tertiary  or highway=tertiary_link
			define
				min-zoom : 11
				line-color : #eeee77
				line-width : 11:2;15:3;19:10
				border-style : solid
				border-color : #000000
				border-width : 20%
		elsefor : highway=secondary or highway=primary_link
			define
				min-zoom : 7
				line-color : #eebb55
				line-width : 7:2;14:3;18:10
				border-style : solid
				border-color : #000000
				border-width : 20%

		elsefor : highway=primary or highway=motorway_link or highway=trunk_link
			define
				min-zoom : 5
				line-color : #ff9155
				line-width : 6:1;11:4;17:10
				border-style : solid
				border-color : #000000
				border-width : 20%
		elsefor : highway=motorway or highway=trunk
			define
				min-zoom : 5
				line-color : #ff3333
				line-width : 6:1;10:5;16:10
				border-style : solid
				border-color : #000000
				border-width : 20%
		else
			stop

		for : tunnel=yes
			define
				line-opacity : 0.3
				border-opacity : 0.3
//				fill-opacity : 0.3
		draw : line

	target : barrier
		define
			min-zoom : 15
			line-color : #222222
			line-width : 0.5		
		draw : line

	target : parking
		define
			min-zoom : 15	
			line-width : 0.5
			line-color : #dc9833
			line-opacity : 0.3
			fill-color : #f3f298

		draw : fill

	target : bridge 
 
		for : cycleway=designated or highway=cycleway
			define
				min-zoom : 15
				line-color : #fcfaeb

				line-width : 15:2;17:6				
				border-style : solid
				border-color : #000000
				border-width : 15:0%;17:30%
			draw : line


		for : highway=footway or footway=designated 
			define
				min-zoom : 16
				line-color : #fcfaeb

				line-width : 16:3;17:6				
				border-style : solid
				border-color : #000000
				border-width : 30%
			draw : line
	target : railway
		define
			min-zoom: 10
			line-color : #fcfaeb
			line-style : dash
			line-width : 13:1.5;17.5:2.75
			border-style : solid
			border-color : black
			border-width : 50%
			border-opacity : 1
			line-opacity : 1
		draw : line
		
		

	target : waterarea
		define
			line-style : none
			fill-color : #65a4d0 
		draw : fill



	target : waterway
		define
			min-zoom : 12
			line-color : #65a4d0 
			line-width : 13:0.5;17:2
		draw : line


	target : cliff
		define
			min-zoom : 16
			line-color : #444444
			line-width : 2		
		draw : line
		define 
			line-style : dash
			min-zoom : 16
			line-color : #444444
			line-offset : 2
			line-width : 3
			line-offset-sides : right
		draw : line


	target : landuse
		for : landuse=forest OR natural=wood
			define
				line-style : none
				fill-color : #9ade84
			draw : fill

		elsefor : landuse=residential
			define
				line-style : none
				fill-color : #efe6dc
			draw : fill

		elsefor : landuse=commercial
			define
				line-style : none
				fill-color : #d2d7f1
			draw : fill

		elsefor : landuse=farm or landuse=farmland or landuse=field
			define
				line-style : none
				fill-color : #f8f1a8
			draw : fill

		elsefor : landuse=industrial
			define
				line-style : none
				fill-color : #c6c1b8
			draw : fill
		else

			define
				line-style : none
				fill-color : #cfd4cf
			draw : fill
		

	target : recreation 
		define
			line-style : none
			fill-color : #caff99
		draw : fill
		